<?xml version="1.0"?>

<block>
	<name>WAVE Short Message</name>
	<key>ieee802_11_wave_short_message</key>
	<category>IEEE802.11</category>
	<import>import ieee802_11</import>
	<make>ieee802_11.wave_short_message($version)</make>

	<callback>set_version($version)</callback>

	<param>
		<name>Version</name>
		<key>version</key>
		<value>0</value>
		<type>int</type>
	</param>

	<sink>
		<name>in</name>
		<type>message</type>
	</sink>

	<source>
		<name>out</name>
		<type>message</type>
	</source>
</block>
